<div class="add-edit">
    <h1>Edit {{article.title}}</h1>
    {{#if error}}
        <p class="alert">{{error}}</p>
    {{/if}}

    <form action="/shop/edit" method="post" enctype="multipart/form-data">
        <div class="add-edit__rows">
            <div>
                <div class="input-field input-field--is-filled">
                    <div class="input-field__control">
                        <label for="title" class="input-field__label">Title</label>
                        <input id="title" name="title" type="text" class="validate input-field__input" required value="{{article.title}}">
                        <span class="helper-text" data-error="Enter title"></span>
                    </div>
                </div>

                <div class="input-field input-field--is-filled">
                    <div class="input-field__control">
                        <label for="price" class="input-field__label">Price</label>
                        <input id="price" name="price" type="number" class="validate input-field__input" required min="1" value="{{article.price}}">
                        <span class="helper-text" data-error="Enter price"></span>
                    </div>
                </div>

                <div class="file-field input-field">
                    <div class="btn">
                        <span>Photo</span>
                        <input type="file" name="article">
                    </div>
                </div>
            </div>

            <div>
                <div class="input-field input-field--is-filled">
                    <div class="input-field__control">
                        <label for="quantity" class="input-field__label">Quantity available</label>
                        <input id="quantity" name="quantity" type="text" class="validate input-field__input" required value="{{article.quantity}}">
                        <span class="helper-text" data-error="Enter quantity"></span>
                    </div>
                </div>

                <div class="input-field input-field--is-filled">
                    <div class="input-field__control">
                        <label for="description" class="input-field__label">Additional description</label>
                        <textarea id="description" name="description" class="input-field__textarea">{{article.description}}</textarea>
                        <span class="helper-text" data-error="Enter additional description"></span>
                    </div>
                </div>
                <input type="hidden" name="_csrf" value="{{csrf}}">
                <input type="hidden" name="id" value="{{article._id}}">
                <button type="submit" class="btn btn-primary">Edit</button>
            </div>
        </div>
    </form>

    <form action="/shop/remove" method="post">

        <input type="hidden" name="id" value="{{article._id}}">
        <input type="hidden" name="_csrf" value="{{csrf}}">

        <button class="btn red">Удалить</button>
    </form>
</div>


