<div class="auth container">
    <div class="row row_auth">
        <div id="login">
            {{#if loginError}}
                <p class="alert">{{loginError}}</p>
            {{/if}}

            <h1>Log in to the shop</h1>
            <form action="/auth/login" method="post">
                <div class="input-field">
                    <div class="input-field__control">
                        <label for="email" class="input-field__label">Email</label>
                        <input id="email" name="email" type="email" class="validate input-field__input" required>
                        <span class="helper-text" data-error="Enter email"></span>
                    </div>
                </div>
                <div class="input-field">
                    <div class="input-field__control">
                        <label for="password" class="input-field__label">Password</label>
                        <input id="password" name="password" type="password" class="validate input-field__input" required>
                        <span class="helper-text" data-error="Enter password"></span>
                    </div>
                </div>
                <input type="hidden" name="_csrf" value="{{csrf}}">
                <p><a href="/auth/reset">Forgot your password?</a></p>
                <button class="btn btn-primary" type="submit">Sign in</button>

            </form>
        </div>

        <div id="register">
            {{#if registerError}}
                <p class="alert">{{registerError}}</p>
            {{/if}}

            <h1>Создать аккаунт</h1>
            <form action="/auth/register" method="post">
                <div class="input-field">
                    <div class="input-field__control">
                        <label for="reemail" class="input-field__label">Email</label>
                        <input id="reemail" name="email" type="email" class="validate input-field__input" required>
                        <span class="helper-text" data-error="Enter email"></span>
                    </div>
                </div>
                <div class="input-field">
                    <div class="input-field__control">
                        <label for="rpassword" class="input-field__label">Password</label>
                        <input id="rpassword" name="password" type="password" class="validate input-field__input" required>
                        <span class="helper-text" data-error="Enter password"></span>
                    </div>
                </div>
                <div class="input-field">
                    <div class="input-field__control">
                        <label for="confirm" class="input-field__label">Password again.</label>
                        <input id="confirm" name="confirm" type="password" class="validate input-field__input" required>
                        <span class="helper-text" data-error="Enter password again."></span>
                    </div>
                </div>
                <div class="input-field">
                    <div class="input-field__control">
                        <label for="name" class="input-field__label">Your name</label>
                        <input id="name" name="name" type="text" class="validate input-field__input" required>
                        <span class="helper-text" data-error="Enter a name"></span>
                    </div>
                </div>
                <input type="hidden" name="_csrf" value="{{csrf}}">
                <button class="btn btn-primary" type="submit">Sign up</button>

            </form>
        </div>
    </div>
</div>

