<div class="row row_auth">
        <div class="col s6 offset-s3">
            {{#if error}}
                <p class="alert">{{error}}</p>
            {{/if}}
            <h1>Forgot your password?</h1>
            <form action="/auth/reset" method="post">
                <div class="input-field">
                    <div class="input-field__control">
                        <label for="email" class="input-field__label">Email</label>
                        <input id="email" name="email" type="email" class="validate input-field__input" required>
                        <span class="helper-text" data-error="Enter email"></span>
                    </div>
                </div>
                <input type="hidden" name="_csrf" value="{{csrf}}">
                <button class="btn btn-primary" type="submit">Reset</button>
            </form>
        </div>
</div>

